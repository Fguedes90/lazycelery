#!/bin/sh
#
# Pre-commit hook for LazyCelery
# Runs formatting, linting, and tests before allowing commit
#

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if mise is available
if ! command -v mise &> /dev/null; then
    echo "âŒ mise is required but not installed. Please install mise first."
    exit 1
fi

# 1. Check formatting
echo "ğŸ“ Checking code formatting..."
if ! mise run fmt; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'mise run fmt' to fix formatting issues"
    exit 1
fi
echo "âœ… Code formatting is correct"

# 2. Run linting
echo "ğŸ” Running clippy lints..."
if ! mise run lint; then
    echo "âŒ Linting failed!"
    echo "ğŸ’¡ Fix the clippy warnings above"
    exit 1
fi
echo "âœ… All linting checks passed"

# 3. Run tests
echo "ğŸ§ª Running tests..."
if ! mise run test; then
    echo "âŒ Tests failed!"
    echo "ğŸ’¡ Fix the failing tests above"
    exit 1
fi
echo "âœ… Tests passed"

# 4. Run security audit
echo "ğŸ”’ Running security audit..."
if ! mise run audit; then
    echo "âŒ Security audit failed!"
    echo "ğŸ’¡ Fix the security issues above"
    exit 1
fi
echo "âœ… Security audit passed"

echo "ğŸ‰ All pre-commit checks passed! Proceeding with commit..."